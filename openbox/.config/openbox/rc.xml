<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc">

  <!-- Theme -->
  <theme>
    <name>Clearlooks</name>
    <titleLayout>LIMC</titleLayout>
    <font place="ActiveWindow">Monospace 10</font>
    <font place="MenuHeader">Monospace Bold 10</font>
    <font place="MenuItem">Monospace 10</font>
  </theme>

  <!-- Keyboard shortcuts -->
  <keyboard>
    <!-- Open terminal -->
    <keybind key="W-Return">
      <action name="Execute">
        <command>alacritty</command>
      </action>
    </keybind>

    <!-- Close window -->
    <keybind key="W-q">
      <action name="Close"/>
    </keybind>

    <!-- Switch desktops -->
    <keybind key="W-Left">
      <action name="DesktopPrev"/>
    </keybind>
    <keybind key="W-Right">
      <action name="DesktopNext"/>
    </keybind>
  </keyboard>

  <!-- Mouse actions -->
  <mouse>
    <context name="Titlebar">
      <mousebind button="A-Left" action="Drag"/>
      <mousebind button="A-Right" action="Raise"/>
    </context>
  </mouse>

</openbox_config>
